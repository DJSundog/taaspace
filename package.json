{
  "name": "taaspace",
  "version": "3.0.0",
  "description": "A ZUI positioning lib for squareformatted images.",
  "keywords": [
    "zoomable",
    "user interface"
  ],
  "homepage": "https://github.com/taataa/taaspace",
  "main": "taaspace.js",
  "author": {
    "name": "Akseli Palen",
    "email": "akseli.palen@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/taataa/taaspace.git"
  },
  "license": {
    "type": "MIT",
    "url": "https://github.com/taataa/taaspace/blob/master/LICENSE"
  },
  "dependencies": {
    "kld-affine": "^0.1.0"
  },
  "devDependencies": {
    "jshint": "latest"
  },
  "scripts": {
    "start": "python -m SimpleHTTPServer",
    "build": "npm run test:lint && npm run build:bundle && npm run test:headless",
    "build:bundle": "browserify src/index.js --standalone taaspace -o taaspace.js",
    "test": "npm run test:lint && npm run test:headless",
    "test:unit": "mocha test/taaspace.test.js",
    "test:headless": "mocha-phantomjs test/testrunner.html",
    "test:lint": "jshint src/* test/*.js"
  }
}
