{
  "name": "taaspace",
  "version": "3.0.0-alpha",
  "description": "A ZUI positioning lib for squareformatted images.",
  "keywords": [
    "zoomable",
    "user interface"
  ],
  "homepage": "https://github.com/taataa/taaspace",
  "main": "taaspace.js",
  "author": {
    "name": "Akseli Palen",
    "email": "akseli.palen@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/taataa/taaspace.git"
  },
  "license": {
    "type": "MIT",
    "url": "https://github.com/taataa/taaspace/blob/master/LICENSE"
  },
  "dependencies": {
    "kld-affine": "git+https://github.com/thelonious/kld-affine.git#development",
    "seqid": "^1.0.1",
    "loadimages": "^0.2.2",
    "nudged": "^1.0.1",
    "move-js": "^0.5.0"
  },
  "devDependencies": {
    "jshint": "^2.8.0",
    "mocha": "^2.3.3",
    "browserify": "^11.2.0",
    "mocha-phantomjs": "^4.0.1",
    "phantomjs": "^1.9.18",
    "chai": "^3.3.0",
    "chai-jquery": "^2.0.0",
    "jquery": "^2.1.4",
    "minifyify": "^7.1.0",
    "mochify": "^2.13.0"
  },
  "scripts": {
    "start": "python -m SimpleHTTPServer",
    "build": "npm run test:lint && npm run build:dev && npm run test:headless",
    "build:bundle": "browserify src/index.js --standalone taaspace -o taaspace.js",
    "build:dev": "browserify --debug --standalone taaspace src/index.js > taaspace.min.js",
    "#build:dev": "browserify --debug --standalone taaspace src/index.js -p [minifyify --map taaspace.map.json --output taaspace.map.json] > taaspace.min.js",
    "test": "npm run test:lint && npm run test:headless",
    "test:unit": "mocha tests/taaspace.test.js",
    "test:headless": "mocha-phantomjs --view 512x512 tests/testrunner.html",
    "test:lint": "jshint src/* tests/*.js"
  }
}
